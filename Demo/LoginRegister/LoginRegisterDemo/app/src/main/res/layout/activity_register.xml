<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    android:gravity="center"
    android:padding="16sp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/profileImageView"
            android:layout_width="160sp"
            android:layout_height="160sp"
            android:src="@drawable/baseline_add_photo_alternate_24"
            android:contentDescription="Profil Fotoğrafı Seç" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="32sp">

            <EditText
                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:background="@drawable/rounded_corner"
                android:hint="İsim"
                android:inputType="text"
                android:padding="18sp"
                android:textColor="#595959"
                android:textColorHint="#595959"
                android:textSize="20sp"
                android:backgroundTint="@color/white"/>

            <EditText
                android:id="@+id/surname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:background="@drawable/rounded_corner"
                android:hint="Soyisim"
                android:inputType="text"
                android:padding="18sp"
                android:textColor="#595959"
                android:textColorHint="#595959"
                android:textSize="20sp"
                android:backgroundTint="@color/white"/>
        </LinearLayout>


        <EditText
            android:id="@+id/trid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32sp"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="@color/white"
            android:hint="TCNO"
            android:inputType="numberPassword"
            android:padding="18sp"
            android:textColor="#595959"
            android:textColorHint="#595959"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32sp"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="@color/white"
            android:hint="Telefon Numarası"
            android:inputType="phone"
            android:padding="18sp"
            android:textColor="#595959"
            android:textColorHint="#595959"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32sp"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="@color/white"
            android:hint="Adres"
            android:inputType="textMultiLine"
            android:gravity="top|start"
            android:minLines="3"
            android:padding="16sp"
            android:textColor="#595959"
            android:textColorHint="#595959"
            android:textSize="20sp"/>


        <EditText
            android:id="@+id/mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32sp"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="@color/white"
            android:hint="E-posta"
            android:inputType="textEmailAddress"
            android:padding="18sp"
            android:textColor="#595959"
            android:textColorHint="#595959"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/passwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32sp"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="@color/white"
            android:hint="Şifre"
            android:inputType="textPassword"
            android:padding="18sp"
            android:textColor="#595959"
            android:textColorHint="#595959"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/passwd2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32sp"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="@color/white"
            android:hint="Şifrenizi tekrar giriniz"
            android:inputType="textPassword"
            android:padding="18sp"
            android:textColor="#595959"
            android:textColorHint="#595959"
            android:textSize="20sp" />

        <Button
            android:id="@+id/docButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Engelli belgenizi yükleyiniz (.PDF formatında)"
            android:layout_marginTop="20dp"/>

        <Button
            android:id="@+id/vehicleRegButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Araç ruhsatınızı yükleyiniz (.PDF formatında)"
            android:layout_marginTop="20dp"/>


        <Button
            android:id="@+id/regButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32sp"
            android:backgroundTint="#9CF079"
            android:padding="18sp"
            android:text="Kayıt Ol"
            android:textColor="#595959" />

        <Button
            android:id="@+id/backButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#F44336"
            android:text="Geri Dön"
            android:textColor="@color/white" />


    </LinearLayout>

</RelativeLayout>
</ScrollView>

